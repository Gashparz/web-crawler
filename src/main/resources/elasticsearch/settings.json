{
  "analysis": {
    "filter": {
      "ascii_folding": {
        "type": "asciifolding",
        "preserve_original": true
      }
    },
    "analyzer": {
      "ascii_folding": {
        "type": "custom",
        "tokenizer": "standard",
        "char_filter": [
          "html_strip"
        ],
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      },
      "phone_tokenizer": {
        "tokenizer": "standard",
        "char_filter": [
          "phone_filter"
        ]
      }
    },
    "char_filter": {
      "phone_filter": {
        "type": "pattern_replace",
        "pattern": "\\((\\d+)\\)(\\d+)-(\\d+)",
        "replacement": "$1$2$3"
      }
    }
  }
}
